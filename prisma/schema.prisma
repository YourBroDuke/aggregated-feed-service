// MongoDB Prisma schema
// 参考API_SPEC.md

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("MONGODB_URI")
}

model Platforms {
  id              String @id @default(auto()) @map("_id") @db.ObjectId
  name            String
  icon            String
  color           String
  backgroundColor String
  domain          String
}

model FeedItems {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  title       String
  platform    String
  author      Json
  content     String
  originalUrl String
  stats       Json
  postedAt   DateTime
}

model FollowedUsers {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  platform    String
  username    String
  name        String
  avatar      String
  description String
  profileUrl  String
  followedAt  DateTime
  isActive    Boolean
}
